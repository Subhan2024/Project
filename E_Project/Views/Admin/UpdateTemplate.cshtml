                <div class="col-sm-8 col-md-8 col-lg-4">
                    <div>

                        @using (Html.BeginForm("UpdateTemplate", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <h1>Update Template</h1>

                            @Html.HiddenFor(model => model.C_Template.TemplateId)

                            <div class="mb-3">
                                @Html.TextBoxFor(model => model.C_Template.TemplateName, new { @placeholder = "Name", @required = "required", @class = "form-style" })
                            </div>
                            <div class="mb-3">
                                @Html.TextBoxFor(model => model.C_Template.TemplateCategory, new { @placeholder = "Category", @required = "required", @class = "email" })
                            </div>
                            <div class="mb-3">
                                @Html.TextBoxFor(model => model.C_Template.TemplateContent, new { @placeholder = "Content", @required = "required", @class = "subject" })
                            </div>
                            <div class="mb-3">
                                @Html.TextBoxFor(model => model.C_Template.TemplateImage, new { @placeholder = "Select Image", type = "file", @required = "required", @class = "subject" })
                            </div>

                            <div>
                                <input type="submit" value="Submit" class="btn btn-primary" />
                            </div>
                        }
                    </div>
